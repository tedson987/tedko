using System;

namespace Temperature_Conversion
{
    class Program
    {
        static void Main(string[] args)
        {
            double farenheit = double.Parse(Console.ReadLine());
            TOCelsium(farenheit);
        }

        static void TOCelsium(double farenheit)
        {
            double celsium = 0;

            celsium = (farenheit - 32) * 5 / 9;

            Console.WriteLine($"{celsium:f2}");
        }
    }
}
